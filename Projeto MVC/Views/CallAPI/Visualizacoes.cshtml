@model List<Livro>

@{
    ViewData["Title"] = "Visualizacoes";
}

<h1>Visualizacoes</h1>
@{ViewBag.Title = "Todos Livros";}

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Titulo</th>
            <th>ISBN</th>
            <th>Ano</th>
            <th>Autores</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var b in Model)
    {
        <tr>
            <td>@b.Titulo</td>
            <td>@b.ISBN</td>
            <td>@b.Ano</td>
            <td>
                @foreach (var a in b.Autores)
                {
                    <dd class="col-sm-10">
                        @($" {a.Autores.Nome} {a.Autores.Sobrenome}")
                    </dd>
                }
            </td>
            </tr>
    }
        </tbody>
</table>

